// backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String // ここに bcrypt でハッシュ化した値を保存
  todos    Todo[] // 1人のユーザーは複数のTodoを持つ（1対多）
}

model Todo {
  id        Int     @id @default(autoincrement())
  title     String
  completed Boolean @default(false)
  userId    Int     // 誰のTodoかを示す外部キー
  user      User    @relation(fields: [userId], references: [id])
}